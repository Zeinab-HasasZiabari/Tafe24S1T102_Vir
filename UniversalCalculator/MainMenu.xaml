<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Margin="50,25,50,10" TextWrapping="Wrap" Text="Universal Calculator" VerticalAlignment="Top" Height="74" Width="444" FontSize="48"/>

		<Button Content="Maths Calculator" Margin="50,25,50,10"  Height="65" Width="386" FontSize="36"/>
        <Button Content="Mortgage Calculator"  Margin="50,25,50,10"  Height="65" Width="386" FontSize="36"/>
			<Button Content="Currency Converter" Click="CurrencyConverter_Click" Margin="50,25,50,10" Height="65" Width="386" FontSize="36" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
			<Button Content="Exit" Margin="50,25,50,10"  Height="65" Width="386" FontSize="36"/>
		</StackPanel>
		<StackPanel>
			<Image Source="/Images/abacus.PNG"  Height="200" Width="200" HorizontalAlignment="Right" Margin="30"/>

		</StackPanel>

    </Grid>
</Page>
